<%= render 'users/userinfo', user: @user, book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h1>Books detail</h1>
  <div class="table">
    <tbody>
      <tr>
        <td>
          <%= image_tag 'no_image.jpeg' %>
          <%= link_to @book.user.name, user_path(@user.id) %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(@book.id),  class:"btn btn-success" %>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to 'Destroy',destroy_book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか?'}, class:"btn btn-danger" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </div>
</div>