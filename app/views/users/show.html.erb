<%= render 'userinfo', users: @user %>

<div class="col-md-8 offset-md-1">
  <h1>Books</h1>
  <table class="table tabel-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th><p>Title</p></th>
        <th><p>Opinion</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <% end %>
    </tbody>
  </table>
</div>