<%= render 'userinfo', user: @user, book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h1>Books</h1>
  <table class="table tabel-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th><p>Title</p></th>
        <th><p>Opinion</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image %>
          <% end %>
        </th>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
