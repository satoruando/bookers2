<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr><p>name</p></tr>
          <tr><p><%= user.name %></p></tr>
          <tr><p>introduction</p></tr>
          <tr><p><%= user.introduction %></p></tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to '編集', edit_user_path(user) %>
        <a class="btn btn-outline-secondary btn-block "></a>
      </div>
      <div class="mt-3">
        <h1>New Book</h1>
      </div>
      <%= form_with model:book, local:true do |f| %>
      <div class="form-group">
      <label for="book_title"><p>Title</p></label>
      <%= f.text_field :title %>
      </div>
      <div class="form-group">
      <label for="book_opinion"><p>Opinion</p></label>
      <%= f.text_area :body %>
      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>