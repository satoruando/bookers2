<%= render 'users/userinfo', user: current_user, book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <th>
        <%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_profile_image %>
        <% end %>
      </th>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>